@using PROJECT.Models;
@{
                /**/

                ViewBag.Title = "index";
                List<Post> posts = ViewBag.posts;
                ApplicationUser currentuser = Session["User"] as ApplicationUser;
                ApplicationUser user = ViewBag.user as ApplicationUser;
                var following = ViewBag.followings;
                var count = ViewBag.counts;
}



@section  style{
    <link href="~/Content/profile.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Material+Icons">
    <link rel="stylesheet" href="https://unpkg.com/bootstrap-material-design@4.1.1/dist/css/bootstrap-material-design.min.css" integrity="sha384-wXznGJNEXNG1NFsbm0ugrLFMQPWswR3lds2VeinahP8N0zJw9VWSopbjv2x7WCvX" crossorigin="anonymous">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons">
    <link rel="stylesgeet" href="https://rawgit.com/creativetimofficial/material-kit/master/assets/css/material-kit.css">

}
<br /><br /><br />
<div class="main main-raised">
    <div class="profile-content shadow-lg p-2 mb-4 bg-white">
        <div class="container" style="padding-bottom:80px">
            <div class="row" style="margin:50px 50px 100px  50px">
                <div class="col-md-4 ml-auto mr-auto">

                    <div class="avatar">
                        <img src="/Profile/File/?id=@user.Id" alt="Circle Image" class="img-raised rounded-circle img-fluid shadow p-2 mb-4 bg-white" style=" width:250px; height:250px">
                    </div>
                </div>
                <div class="col-md-4 ml-auto mr-auto">
                    <div class="profile">

                        <div class="name">
                            <h3 class="title" style="margin-top:20px">@@@user.NickName</h3>
                            <h6>@user.Email</h6>
                            <h6>@user.Bio</h6>
                            <h6>@user.Gender</h6>
                        </div>

                    </div>
                </div>
                <div class="col-md-3 ml-auto mr-auto">

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <div class="h6 text-muted">Followers</div>
                            <div class="h5">@count</div>
                        </li>
                        <li class="list-group-item">
                            <div class="h6 text-muted">Following</div>
                            <div class="h5">@following</div>
                        </li>

                    </ul>
                </div>
                @if (user.Id == currentuser.Id)
                {
                    <div class="col-md-1 ml-auto mr-auto">
                        <a href="~/Profile/Edit/?id=@user.Id "> <button class="btn" style="border:2px;margin-top:20px"><p>Edit</button></a>
                    </div>
                }
                else
                {
                    <div class="col-md-1 ml-auto mr-auto">
                        <a href="~/Profile/Unfriend/?id=@user.Id "> <button class="btn" style="border:2px;margin-top:20px"><p>Unfriend</button></a>
                    </div>
                }
            </div>
            <h1>Posts [@posts.Count()]</h1>
            <hr>
            @if (posts != null)
            {

                <div class="row">
                    @foreach (var post in posts)
                    {
                        <div class="col-md-4 ">

                            <div class="card shadow p-2 mb-4 bg-white" style="margin:5px 15px 50px 15px">

                                <img alt="krinish" src="~/Profile/Post/?id=@post.photoId" class="img-thumbnail" style="width:334px;height:250px">


                                <div class="card-footer">
                                    @{
                                        var likecount = post.Likes.Count();
                                    }
                                    <p style="float:right"><i class="fas fa-heart " style="color:red"></i> @likecount</p>
                                </div>
                            </div>

                        </div>
                    }
                </div>



            }

        </div>
    </div>
</div>
@section  scripts{
    <script>!function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0], p = /^http:/.test(d.location) ? 'http' : 'https'; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = p + '://platform.twitter.com/widgets.js'; fjs.parentNode.insertBefore(js, fjs); } }(document, 'script', 'twitter-wjs');</script>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

}