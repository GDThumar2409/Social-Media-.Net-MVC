</div>





@section scripts{
    <script>
        /*like toggle*/
        $(document).ready(function () {

            $('body').on("click", '.heart', function () {

                var A = $(this).attr("id");
                var B = A.split("H");
                var messageID = B[1];
                var C = parseInt($("#L" + messageID).html());
                $(this).css("background-position", "")
                var D = $(this).attr("rel");

                if (D === 'like') {
                    $.ajax
                        ({
                            url: '/Home/Like',
                            type: 'POST',
                            datatype: "json",
                            contentType: 'application/json',
                            data: JSON.stringify({
                                postid: messageID
                            }),


                            success: function (status) {
                                if (status == "success") {
                                    //$.notify("Request Sent", "success");
                                    //$(".btn .btn-default").notify("Request Sent", "success");
                                    $("#L" + messageID).html(C + 1);
                                    $("#H" + messageID).addClass("heartAnimation").attr("rel", "unlike");
                                    //alert("comment added")
                                }



                            },
                            error: function () {
                                alert("Whooaaa! Something went wrong..")
                            },
                        });
                }

                else {
                    $.ajax
                        ({
                            url: '/Home/DisLike',
                            type: 'POST',
                            datatype: "json",
                            contentType: 'application/json',
                            data: JSON.stringify({
                                postid: messageID
                            }),


                            success: function (status) {
                                if (status == "success") {
                                    //$.notify("Request Sent", "success");
                                    //$(".btn .btn-default").notify("Request Sent", "success");
                                    $("#L" + messageID).html(C - 1);
                                    $("#H" + messageID).removeClass("heartAnimation").attr("rel", "like");
                                    $("#H" + messageID).css("background-position", "left");
                                    //alert("comment added")
                                }



                            },
                            error: function () {
                                alert("Whooaaa! Something went wrong..")
                            },
                        });

                }


            });


        });

    </script>
    <script src="~/Scripts/notify.js"></script>
    <script>
        function comment(postid, user, cmtext, cmtid) {
            debugger;
            var cmid = "#" + cmtext;
            var comment = $(cmid).val();
            if (comment == " " || comment == "") {
                return;
            }
            var user = user;

            $.ajax
                ({
                    url: '/Home/Comment',
                    type: 'POST',
                    datatype: "json",
                    contentType: 'application/json',
                    data: JSON.stringify({
                        comment: comment,
                        postid: postid
                    }),
                    //data: {
                    //     state : stateId
                    //  },

                    success: function (status) {
                        if (status == "success") {
                            //$.notify("Request Sent", "success");
                            //$(".btn .btn-default").notify("Request Sent", "success");
                            var div = $('<div class="shadow p - 2 mb - 4 bg - white"><code>@@ ' + user + ' :</code>' + " " + comment + '</div>');
                            $("#" + cmtid).append(div);
                            $("#" + cmtext).val('');
                            $("#" + cmtext).attr("placeholder", "What Are You Thinking?");
                            //alert("comment added")
                        }
                        if (status == "Request Already Sent") {
                            //$.notify("Request Already Sent", "success");
                            $(".btn").notify("Request Already Sent", "error");
                        }


                    },
                    error: function () {
                        alert("Whooaaa! Something went wrong..")
                    },
                });
        }
    </script>
    <!--like-->
    <script>
        function myFunction(x) {
            x.classList.toggle("fa-thumbs-down");

        }

        $('#Like').toggle(function () {
            $(this).text('Dislike');
        }, function () {
            $(this).text('Like');
        });
    </script>

    <script>
        /*ajax search */
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });


    </script>


}
