@section scripts{
    <script>
        /*like toggle*/
        $(document).ready(function () {
            $("#ab").click(function () {
                $(this).css("background", "red");
            }, function () {
                $(this).css("color", "black");
            });
        });
    </script>
    <script src="~/Scripts/notify.js"></script>
    <script>
        function comment(postid, user) {
            debugger;
            var comment = $("#comment").val();
            var user = user;

            $.ajax
                ({
                    url: '/Home/Comment',
                    type: 'POST',
                    datatype: "json",
                    contentType: 'application/json',
                    data: JSON.stringify({
                        comment: comment,
                        postid: postid
                    }),
                    //data: {
                    //     state : stateId
                    //  },

                    success: function (status) {
                        if (status == "success") {
                            //$.notify("Request Sent", "success");
                            //$(".btn .btn-default").notify("Request Sent", "success");
                            $("#cmts").append('<div class="shadow p - 2 mb - 4 bg - white"></div>').html(comment).append('<code></code>').html("@@" + user);
                            //alert("comment added")
                        }
                        if (status == "Request Already Sent") {
                            //$.notify("Request Already Sent", "success");
                            $(".btn").notify("Request Already Sent", "error");
                        }


                    },
                    error: function () {
                        alert("Whooaaa! Something went wrong..")
                    },
                });
        }
    </script>
